<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<GridPane fx:controller="JavaServerAddressBook.Controller"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>
    <Label style = "-fx-font: NORMAL 20 Tahoma; -fx-alignment: center" text="Java Server Address Book"
           GridPane.rowIndex="0" GridPane.columnIndex ="0" >
    </Label>
    <HBox spacing="5" alignment="center" GridPane.columnIndex="0"
          GridPane.rowIndex="1">
        <TextField fx:id="nameField" promptText="Name"
                   prefWidth="100" />
        <TextField fx:id="addressField" promptText="Address"
                   prefWidth="100" />
        <TextField fx:id="phoneField" promptText="Phone"
                   prefWidth="100" />
        <TextField fx:id="emailField" promptText="Email"
                   prefWidth="100" />
        <TextField fx:id="commmentField" promptText="comment"
                   prefWidth="200" />
    </HBox>
    <HBox spacing="10" alignment="center" GridPane.columnIndex="0"
          GridPane.rowIndex="2">
        <Button style = "-fx-font: NORMAL 12 Tahoma;" text="ADD"/>
        <VBox spacing="10" alignment="center">
            <Button style = "-fx-font: NORMAL 12 Tahoma;" text="SEARCH"/>
            <Button style = "-fx-font: NORMAL 12 Tahoma;" text="VIEW ALL"/>
        </VBox>
        <Button style = "-fx-font: NORMAL 12 Tahoma;" text="REMOVE"/>
         <VBox spacing="10" alignment="TOP_LEFT">
             <Button style = "-fx-font: NORMAL 12 Tahoma;" text="SAVE TO .TXT FILE"/>
             <Button style = "-fx-font: NORMAL 12 Tahoma;" text="LOAD FROM .TXT FILE"/>
             <TextField fx:id="fileField" promptText="File name"
                        prefWidth="100" />
         </VBox>
    </HBox>
    <TableView fx:id="tableView" GridPane.columnIndex="0"
               GridPane.rowIndex="3"
    >
        <columns>
            <TableColumn style = "-fx-font: NORMAL 12 Tahoma;" fx:id="idColumn" text="ID" prefWidth="100">
                <cellValueFactory><PropertyValueFactory property="opId" />
                </cellValueFactory>
            </TableColumn>
            <TableColumn style = "-fx-font: NORMAL 12 Tahoma;" text="NAME" prefWidth="100">
                <cellValueFactory><PropertyValueFactory property="opX" />
                </cellValueFactory>
            </TableColumn>
            <TableColumn style = "-fx-font: NORMAL 12 Tahoma;" text="ADDRESS" prefWidth="100">
                <cellValueFactory><PropertyValueFactory property="operation" />
                </cellValueFactory>
            </TableColumn>
            <TableColumn style = "-fx-font: NORMAL 12 Tahoma;" text="PHONE" prefWidth="100">
                <cellValueFactory><PropertyValueFactory property="opY" />
                </cellValueFactory>
            </TableColumn>
            <TableColumn style = "-fx-font: NORMAL 12 Tahoma;" text="GMAIL" prefWidth="150">
                <cellValueFactory><PropertyValueFactory property="result" />
                </cellValueFactory>
            </TableColumn>
            <TableColumn style = "-fx-font: NORMAL 12 Tahoma;" text="COMMENT" prefWidth="200">
                <cellValueFactory><PropertyValueFactory property="result" />
                </cellValueFactory>
            </TableColumn>
        </columns>
        <items>
        </items>
        <sortOrder>
            <fx:reference source="idColumn"/>
        </sortOrder>
    </TableView>
</GridPane>